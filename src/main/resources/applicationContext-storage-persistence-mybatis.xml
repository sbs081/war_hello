<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="galileo_sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="galileo_dataSource"/>
        <property name="configLocation" value="classpath:persistence-mybatis-config.xml"/>
        <!-- 配置Mybatis的插件plugin-->
        <!--<property name="plugins">-->
        <!--<array>-->
        <!--<bean class="com.meitun.galileo.storage.repository.common.hive.HiveResultSetInterceptor" />-->
        <!--</array>-->
        <!--</property>-->
    </bean>


    <bean id="monitor_configurer" class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.makotojava.com.intro.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="galileo_sqlSessionFactory"/>
    </bean>

</beans>